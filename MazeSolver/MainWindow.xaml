<Window x:Class="MazeSolver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MazeSolver"
        mc:Ignorable="d"
        Title="Maze Solver" Height="800" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBlock Text="Width:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="WidthInput" Width="50" Text="20" Margin="0,0,10,0"/>
            <TextBlock Text="Height:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="HeightInput" Width="50" Text="20" Margin="0,0,10,0"/>
            <Button x:Name="GenerateButton" Content="Generate Maze" Click="GenerateButton_Click" Margin="0,0,10,0"/>
            <Button x:Name="SolveButton" Content="Solve Maze" Click="SolveButton_Click"/>
        </StackPanel>

        <Canvas x:Name="MazeCanvas" Grid.Row="1" Margin="10" Background="White"/>
    </Grid>
</Window>
